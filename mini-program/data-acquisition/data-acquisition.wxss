
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 将图片置于其他元素之下 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.primary-button,
.default-button,
.selectmode-button {
  margin-bottom: 20rpx;
  width: 700rpx; /* 设置按钮宽度 */
}

.startwork-button,
.endwork-button {
  height: 280rpx; /* 设置按钮高度 */
  line-height: 300rpx;
  margin-bottom: 20rpx;
  width: 700rpx; /* 设置按钮宽度 */
  text-align: center; /* 设置文字居中 */
}

.input-box {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

